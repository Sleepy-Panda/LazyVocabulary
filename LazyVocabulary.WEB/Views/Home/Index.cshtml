@using LazyVocabulary.Resources.Views.Home;
@using LazyVocabulary.Resources.Views.Menu;

@{
    ViewBag.Title = HomeIndexResource.PageName;
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="left-menu-container">
    <div class="left-menu-item-container">
        <a href="#" title="@MenuForUnauthorizedResource.Home">
            <i class="fa fa-home"></i>
        </a>
    </div>
    <div class="left-menu-item-container">
        <a href="/Account/Register" title="@MenuForUnauthorizedResource.Register">
            <i class="fa fa-user-plus"></i>
        </a>
    </div>
    <div class="left-menu-item-container">
        <a href="/Account/Login" title="@MenuForUnauthorizedResource.Login">
            <i class="fa fa-sign-in"></i>
        </a>
    </div>
</div>

<div id="cover">
    <div id="cover-caption">
        <div class="container">
            <h1>@HomeIndexResource.WelcomeBeLazy</h1>
            <p>@HomeIndexResource.AboutBeLazy</p>
            <a href="/Account/Register" class="btn btn-blue" data-ripple>
                <i class="fa fa-user-plus"></i> @HomeIndexResource.Join
            </a>
            <div class="arrow-down hidden-xs">
                <i class="fa fa-angle-down"></i>
            </div>
        </div>
    </div>
</div>

<div id="language">
    <div class="container">
        <p>@HomeIndexResource.RecommendedLanguage</p>
        <p>@HomeIndexResource.ChangeLanguage</p>
        <ul>
            <li>
                <img src="~/Content/Images/home/ru.png" class="flag" id="flag-ru" title="@HomeIndexResource.Russian" />
            </li>
            <li>
                <img src="~/Content/Images/home/en.png" class="flag" id="flag-en" title="@HomeIndexResource.English" />
            </li>
        </ul>  
    </div>
</div>

<div id="about">
    <div class="container">
        <h1>@HomeIndexResource.BeLazyIs</h1>
        <div class="row">
            <div class="col-md-2 col-md-offset-1">
                <img src="~/Content/Images/home/notebook.png" />
            </div>
            <div class="col-md-8">
                <h2>@HomeIndexResource.Header1</h2>
                <p>@HomeIndexResource.Details1</p>
            </div>
        </div>

        <div class="row">
            <div class="col-md-2 col-md-offset-1">
                <img src="~/Content/Images/home/notepad.png" />
            </div>
            <div class="col-md-8">
                <h2>@HomeIndexResource.Header2</h2>
                <p>@HomeIndexResource.Details2</p>
            </div>
        </div>

        <div class="row">
            <div class="col-md-2 col-md-offset-1">
                <img src="~/Content/Images/home/browser.png" />
            </div>
            <div class="col-md-8">
                <h2>@HomeIndexResource.Header3</h2>
                <p>@HomeIndexResource.Details3</p>
            </div>
        </div>        
    </div>
</div>

<div class="footer">
    <div class="footer-call-to-action">
        <div class="container">
            <ul>
                <li>
                    <p>@HomeIndexResource.RegisterForFree</p>
                </li>
                <li>
                    <a href="/Account/Register" class="btn btn-red" data-ripple>
                        <i class="fa fa-user-plus"></i> @HomeIndexResource.Register
                    </a>
                </li>
            </ul>                               
        </div>
        <div class="container">
            <ul>
                <li>
                    <p>@HomeIndexResource.LeaveFeedback</p>
                </li>
                <li>
                    <a href="/Home/ContactUs" class="btn btn-blue" data-ripple>
                        <i class="fa fa-user-plus"></i> @HomeIndexResource.ContactUs
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <div class="footer-social-section">
        <div class="container">
            <ul>
                <li>
                    <a class="btn-rounded btn-fb" title="@HomeIndexResource.Facebook" data-ripple>
                        <i class="fa fa-facebook"></i>
                    </a>
                </li>
                <li>
                    <a class="btn-rounded btn-twitter" title="@HomeIndexResource.Twitter" data-ripple>
                        <i class="fa fa-twitter"></i>
                    </a>
                </li>
                <li>
                    <a class="btn-rounded btn-gplus" title="@HomeIndexResource.Google" data-ripple>
                        <i class="fa fa-google-plus"></i>
                    </a>
                </li>
                <li>
                    <a class="btn-rounded btn-vk" title="@HomeIndexResource.Vk" data-ripple>
                        <i class="fa fa-vk"></i>
                    </a>
                </li>
                <li>
                    <a class="btn-rounded btn-instagram" title="@HomeIndexResource.Instagram" data-ripple>
                        <i class="fa fa-instagram"></i>
                    </a>
                </li>
            </ul>
        </div>
    </div>

    @*<div class="footer-copyright">
        <div class="container">
            © 2017 Copyright</a>
        </div>
    </div>*@
</div>

@section Scripts {
    @Scripts.Render("~/Scripts/app-js/localization.js")
}