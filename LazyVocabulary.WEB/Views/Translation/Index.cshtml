@using LazyVocabulary.WEB.Models;
@model IEnumerable<IndexTranslationViewModel>

@{
    ViewBag.Title = "Мои переводы";
}

@Styles.Render("~/Content/menu.css")

<div class="breadcrump-container">
    <a href="/Home/Index">Главная</a>
    <span class="separator"></span>
    <a href="/Dictionary/Index">Мои словари</a>
    <span class="separator"></span>
    Мои переводы
</div>

<div class="top-buttons-container">
    <div class="row">
        <a href="/Translation/Create/@ViewBag.DictionaryId" class="btn btn-info pull-right">
            <i class="fa fa-plus"></i> Добавить перевод
        </a>
    </div>
</div>

<div class="container">
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-hover table-striped top">
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Value
                        </td>
                        <td>
                            @if (item.Translations.Count > 0)
                            {
                                foreach (var translation in item.Translations)
                                {
                                    @translation.Value
                                    <br />
                                }
                            }
                            else
                            {
                                <p class="text-muted">Вы не добавили ни одного перевода.</p>
                            }
                        </td>
                        <td class="toggle-menu-icon">
                            <a href='javascript:;' class='toggle' id="toggle-@item.Id">
                                <i class='fa fa-ellipsis-v'></i>
                            </a>
                            <ul class="menu" data-menu data-menu-toggle="#toggle-@item.Id">
                                <li>
                                    <a href="@item.Id">Список переводов</a>
                                </li>
                                <li>
                                    <a href="@item.Id">Подробнее о словаре</a>
                                </li>
                                <li class="menu-separator"></li>
                                <li>
                                    <a href="#">Редактировать словарь</a>
                                </li>
                                <li>
                                    <a href="#">Удалить словарь</a>
                                </li>
                                <li class="menu-separator"></li>
                                <li>
                                    <a href="#">Экспортировать словарь в pdf</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted top"><i>Вы не добавили ни одного перевода.</i></p>
    }
</div>

@section Scripts {
    @Scripts.Render("~/Scripts/menu.min.js")

    <script>
        $('[data-menu]').menu();
    </script>
}
