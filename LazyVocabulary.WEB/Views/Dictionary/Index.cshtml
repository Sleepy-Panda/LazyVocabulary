@using LazyVocabulary.WEB.Models;
@model IEnumerable<IndexDictionaryViewModel>

@{
    ViewBag.Title = "Мои словари";
}

@Styles.Render("~/Content/menu.css")

<div class="breadcrump-container">
    <a href="/Home/Index">Главная</a>
    <span class="separator"></span>
    Мои словари
</div>

<div class="top-buttons-container">
    <div class="row">
        <a href="/Dictionary/Create" class="btn btn-info pull-right">
            <i class="fa fa-plus"></i> Добавить словарь
        </a>
    </div>
</div>

<div class="container">
    <ul class="nav nav-tabs top" role="tablist">
        <li class="nav-item active">
            <a class="nav-link" href="#tab-pane-my" data-toggle="tab" role="tab">Мои словари</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#tab-pane-available" data-toggle="tab" role="tab">Доступные мне</a>
        </li>
    </ul>

    <div class="tab-content">
        <div class="tab-pane active" id="tab-pane-my" role="tabpanel">
            @if (Model.Count() > 0)
            {
                <table class="table borderless" id="table-my-dictionaries">
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a href="/Translation/Index/@item.Id">@item.Name</a>
                                    <br />
                                    <span class="text-muted">Количество записей:</span> @item.PhrasesCount
                                    <br />
                                    @item.Description
                                </td>
                                <td class="details hidden-sm hidden-xs">
                                    <span class="text-muted">Создан:</span> @item.CreatedAt
                                    <br />
                                    <span class="text-muted">Обновлён:</span> @item.UpdatedAt
                                </td>
                                <td class="flag">
                                    <img class="flag-image" src="@Url.Content("~/Content/Images/flags/" + item.SourceLanguageImagePath)" />
                                </td>
                                <td class="flag">
                                    <img class="flag-image" src="@Url.Content("~/Content/Images/flags/" + item.TargetLanguageImagePath)" />
                                </td>
                                <td class="toggle-menu-icon">
                                    <a href='javascript:;' class='toggle' id="toggle-@item.Id">
                                        <i class='fa fa-ellipsis-v'></i>
                                    </a>
                                    <ul class="menu" data-menu data-menu-toggle="#toggle-@item.Id">
                                        <li>
                                            <a href="/Translation/Index/@item.Id">Список переводов</a>
                                        </li>
                                        <li>
                                            <a href="/Translation/Create/@item.Id">Добавить перевод</a>
                                        </li>
                                        <li class="menu-separator"></li>
                                        <li>
                                            <a href="/Dictionary/Edit/@item.Id">Редактировать словарь</a>
                                        </li>
                                        <li>
                                            <a href="#" class="delete-dictionary" id="delete-@item.Id">Удалить словарь</a>
                                        </li>
                                        <li class="menu-separator"></li>
                                        <li>
                                            <a href="#">Экспортировать словарь в pdf</a>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted"><i>Вы не создали ни одного словаря.</i></p>
            }

            <div class="modal fade" id="modal-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h4 class="modal-title" id="myModalLabel">Подтвердите удаление</h4>
                        </div>
                        <div class="modal-body">
                            <p>Вы уверены, что хотите удалить выбранный словарь со всеми переводами? Восстановить данные будет <b>невозможно.</b></p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">
                                <i class="fa fa-remove"></i> Закрыть
                            </button>
                            <button type="button" class="btn btn-info" id="btn-submit-delete">
                                <i class="glyphicon glyphicon-ok"></i> Удалить
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="tab-pane" id="tab-pane-available" role="tabpanel">

        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/Scripts/menu.min.js")

    <script>
        $('[data-menu]').menu();

        $('a.delete-dictionary').click(function (event) {
            event.preventDefault();
            $('#modal-delete').modal('show');

            $('#btn-submit-delete').click(function () {
                $.ajax({
                    type: 'POST',
                    url: '/Dictionary/Delete/' + event.target.id.match('[^delete-]*$'),
                    contentType: 'application/json;charset=utf-8',
                    dataType: 'json',
                    success: function (result) {
                        if (result.success == true) {
                            var tr = $(event.target).closest('tr');
                            tr.remove();
                        }
                        else {
                            console.error('Cant delete selected dictionary.');
                        }

                        var table = $('table#table-my-dictionaries');
                        if (!$('tr', table).length) {
                            table.remove();
                            $('#tab-pane-my').append('<p class="text-muted"><i>Вы не создали ни одного словаря.</i></p>');
                        }
                    },
                    error: function (response) {
                        console.error('Cant delete selected dictionary.');
                    },
                    complete: function () {
                        $('#modal-delete').modal('hide');
                    }
                });
            });
        });
    </script>
}