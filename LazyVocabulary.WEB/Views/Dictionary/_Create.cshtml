@using LazyVocabulary.WEB.Models;
@model CreateDictionaryViewModel

<div id="form" class="form-horizontal">
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <h3>Основные настройки</h3>

    <div class="form-group">
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "* Название..." })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", placeholder = "Описание..." })
        @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
    </div>

    <h3>Языки</h3>

    <div class="form-group">
        @Html.DropDownList("SourceLanguageId", null, htmlAttributes: new { @class = "form-control", placeholder = "* Выберите исходный язык..." })
        @Html.ValidationMessageFor(m => m.SourceLanguageId, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.DropDownList("TargetLanguageId", null, htmlAttributes: new { @class = "form-control", placeholder = "* Выберите целевой язык..." })
        @Html.ValidationMessageFor(m => m.TargetLanguageId, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <button id="btn-submit-form" type="submit" value="Сохранить" class="btn btn-info">
            <span class="glyphicon glyphicon-ok"></span> Сохранить
        </button>
    </div>

    <div class="form-group">
        @{
            if (ViewBag.Result == "Success")
            {
                <div id="result" class="alert alert-success alert-dismissible fade in" role="alert" style="display:none;">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <span>Запись успешно добавлена.</span>
                </div>
            }
            if (ViewBag.Result == "Error")
            {
                <div id="result" class="alert alert-danger alert-dismissible fade in" role="alert" style="display:none;">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <span>Произошла ошибка, запись не была добавлена.</span>
                </div>
            }
        }
    </div>
</div>
