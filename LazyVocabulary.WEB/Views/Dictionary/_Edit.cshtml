@using LazyVocabulary.Web.Models;
@model EditDictionaryViewModel

<div id="form" class="form-horizontal">
    @{
        if (ViewBag.Result == "Success")
        {
            <div id="result" class="alert alert-success alert-dismissible fade in top" role="alert" style="display:none;">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <span>Запись успешно обновлена.</span>
            </div>
        }
        if (ViewBag.Result == "Error")
        {
            <div id="result" class="alert alert-danger alert-dismissible fade in top" role="alert" style="display:none;">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <span>Произошла ошибка, запись не была обновлена.</span>
            </div>
        }
    }

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <h3>Основные настройки</h3>

    <div class="form-group">
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.OldName)
    </div>

    <div class="form-group">
        <label class="required" for="Name">Введите название</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="Name">Введите описание</label>
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
    </div>

    <h3>Языки</h3>

    <div class="form-group">
        <label class="required" for="Name">Выберите исходный язык</label>
        @Html.DropDownList("SourceLanguageId", null, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.SourceLanguageId, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label class="required" for="Name">Выберите целевой язык</label>
        @Html.DropDownList("TargetLanguageId", null, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.TargetLanguageId, "", new { @class = "text-danger" })
    </div>
</div>
