@using LazyVocabulary.Web.Models;
@using LazyVocabulary.Resources.Views;

@model RegisterViewModel

@{
    ViewBag.Title = AccountRegisterResource.PageName;
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="left-menu-container">
    <div class="left-menu-item-container">
        <a href="/Home/Index">
            <i class="fa fa-home"></i>
        </a>
    </div>
    <div class="left-menu-item-container">
        <a href="/Account/Register">
            <i class="fa fa-user-plus"></i>
        </a>
    </div>
    <div class="left-menu-item-container">
        <a href="/Account/Login">
            <i class="fa fa-sign-in"></i>
        </a>
    </div>
</div>

<div id="cover">
    <div id="cover-caption">
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2 col-lg-6 col-lg-offset-3 form-box">
                    <div class="form-top">
                        <div class="form-top-left">
                            <h3>@AccountRegisterResource.FormName</h3>
                            <p>@AccountRegisterResource.FormInstructions</p>
                        </div>
                        <div class="form-top-right">
                            <i class="fa fa-lock"></i>
                        </div>
                    </div>
                    <div class="form-bottom">
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        @using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login-form", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = AccountRegisterResource.UserNamePlaceholder })
                                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = AccountRegisterResource.EmailPlaceholder })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = AccountRegisterResource.PasswordPlaceholder })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = AccountRegisterResource.ConfirmPasswordPlaceholder })
                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn" data-ripple><i class="fa fa-user-plus"></i> @AccountRegisterResource.Register</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/Scripts/app-js/localization.js")
}