@using LazyVocabulary.Web.Models;
@model ResetPasswordViewModel

@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="left-menu-container">
    <div class="left-menu-item-container">
        <a href="/Home/Index">
            <i class="fa fa-home"></i>
        </a>
    </div>
    <div class="left-menu-item-container">
        <a href="/Account/Register">
            <i class="fa fa-user-plus"></i>
        </a>
    </div>
    <div class="left-menu-item-container">
        <a href="/Account/Login">
            <i class="fa fa-sign-in"></i>
        </a>
    </div>
</div>

<div id="cover">
    <div class="container">
        <div class="row">
            <div class="col-sm-8 col-sm-offset-2 col-lg-6 col-lg-offset-3 form-box">
                <div class="form-top">
                    <div class="form-top-left">
                        <h3>Сброс пароля</h3>
                        <p>
                            Для сброса пароля введите актуальный адрес электронной почты, использованный при регистрации:
                        </p>
                    </div>
                    <div class="form-top-right">
                        <i class="fa fa-envelope-o"></i>
                    </div>
                </div>
                <div class="form-bottom">
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    @using (Html.BeginForm("ResetPassword", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login-form", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "* Имя пользователя или Email..." })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn" data-ripple><i class="fa fa-sign-in"></i> Войти</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

