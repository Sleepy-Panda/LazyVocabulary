<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - QuickDictionary</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400&amp;subset=cyrillic-ext" rel="stylesheet">

    @Styles.Render("~/Content/homecss")
    @Styles.Render("~/Content/ripple-effect.css")
    @Styles.Render("~/Content/home-preloader.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="loader-wrapper">
        <div id="loader"></div>
        <div class="loader-section section-left"></div>
        <div class="loader-section section-right"></div>
    </div>

    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/ripple-effect.js")
    @Scripts.Render("~/Scripts/home-preloader.js")
    @RenderSection("scripts", required: false)
</body>
</html>
