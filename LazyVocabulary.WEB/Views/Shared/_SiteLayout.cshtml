<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BeLazy</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/ripple-effect.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/ripple-effect.js")

    <div id="wrapper" class="toggled">
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-top ellipsis">
                    <span>@User.Identity.Name</span>
                </li>
                <li>
                    <a href="/Dictionary/Index" data-ripple><i class="fa fa-book"></i> Мои словари</a>
                </li>
                <li>
                    <a href="/Profile/Index" data-ripple><i class="fa fa-user"></i> Мой аккаунт</a>
                </li>
                <li>
                    <a href="#" data-ripple><i class="fa fa-users"></i> Мои подписки</a>
                </li>
                <li>
                    <a href="#" data-ripple><i class="fa fa-bell"></i> Оповещения</a>
                </li>
                <li>
                    <a href="#" data-ripple><i class="fa fa-comment"></i> Комментарии</a>
                </li>
                <li>
                    <a href="#" data-ripple><i class="fa fa-search"></i> Поиск</a>
                </li>
                <li>
                    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                    {
                        @Html.AntiForgeryToken()
                        <a href="javascript:document.getElementById('logoutForm').submit()" data-ripple><i class="fa fa-sign-out"></i> Выход</a>
                    }
                    
                </li>
            </ul>
        </div>

        <div id="page-content-wrapper">
            @RenderBody()
        </div>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
